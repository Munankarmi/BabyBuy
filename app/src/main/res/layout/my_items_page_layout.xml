<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin= "16dp">


    <ImageButton
        android:id="@+id/ib_my_items_page"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@android:drawable/ic_menu_gallery"/>

    <Button
        android:id="@+id/btn_my_items_add_page"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ib_my_items_page"
        android:text="ADD"/>

    <TextView
        android:id="@+id/tv_my_items_page_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ITEM"
        app:layout_constraintStart_toEndOf="@+id/ib_my_items_page"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="12dp"
        android:textStyle="bold"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/tv_my_items_page_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CATEGORY"
        app:layout_constraintStart_toEndOf="@+id/ib_my_items_page"
        app:layout_constraintTop_toBottomOf="@id/tv_my_items_page_item"
        android:layout_margin="12dp"/>

    <TextView
        android:id="@+id/tv_my_items_page_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PRICE"
        app:layout_constraintStart_toEndOf="@+id/ib_my_items_page"
        app:layout_constraintTop_toBottomOf="@id/tv_my_items_page_category"
        android:layout_margin="12dp"/>

    <TextView
        android:id="@+id/tv_my_items_page_description"
        android:layout_width="wrap_content"
        android:layout_height="135dp"
        app:layout_constraintStart_toEndOf="@+id/ib_my_items_page"
        app:layout_constraintTop_toBottomOf="@id/tv_my_items_page_price"
        android:text="descriptions "
        android:layout_margin="12dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>